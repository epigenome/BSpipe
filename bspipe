my ($pvalue, $fdr, $metDiff, $sdDiff, $minCpG, $topWindow, $topClust, $ttest, $wilcoxon, $kstest, $raoscott, $fisher, $anova, $vartest, $ansari, $cucconi, $lepage, $pairFlag, $format, $filter, $samFrac, $rpath, $simulation);
