	"showid"       => \$showID,
	"category=s"   => \$davCats,
	"showcat"      => \$showCat,
	"account=s"    => \$davAccount,
#	"key=s"        => \$keyPos,
	"redraw"       => \$qcRedraw,
	"dmr=s"        => \$dmrLevel,
	"extension=s"  => \$fileExt,
	"from-join"    => \$fromJoin,
	"from-profile" => \$fromProfile,
	"from-dmr"     => \$fromDmr,
	"post-dmr!"    => \$postDmr,
	"gmt=s"        => \@gmtFiles,
