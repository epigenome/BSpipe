	"cpgmps_us=s"  => \$cpgmps_us,
	"cpgmps_uc=i"  => \$cpgmps_uc,
	"cpgmps_dc=i"  => \$cpgmps_dc,
	"cpgmps_v=f"   => \$cpgmps_v,
