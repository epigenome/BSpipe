{
	my $cmd = "$cpgbox -t $boxTar -s $inDir -o $outDir -f 4";
	$cmd .= " -r $boxRef" if $boxRef;
	$cmd .= " -id" if $boxId;
	$cmd .= " -strand 3" if $boxStrand;
	$cmd .= " -bed" if $boxBed;
	$cmd .= " -nocoord" if $boxNoCoord;
	$cmd .= " -percent" if $boxPercent;
	$cmd .= " -width $width" if $width;
	map {$cmd .= " -$_"} @boxShow;
	run('boxplot', $cmd);
}

