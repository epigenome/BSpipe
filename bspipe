		$cmd .= " -k $keyPos" if $keyPos;
		$cmd .= " -w $width" if $width;
		$cmd .= " -h $height" if $height;
		$cmd .= " -p" if $pdfFlag;
		parallel($thread, undef, \&run, 'bsqc', $cmd);
	}
}

