my ($cpgmps_ms, $cpgmps_mc, $cpgmps_us, $cpgmps_uc, $cpgmps_dc, $cpgmps_v, $cpgmpsMem);
my ($methclonePath, $methcloneCov, $methcloneDist, $methcloneDiff);
