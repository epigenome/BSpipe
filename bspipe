	$cmd .= " -prefix $_pre" if $_pre; # this should be after $_out
	$cmd .= " --only" if $_only;
	$cmd .= " --group $_sam" if $_sam;
	$cmd .= " --diff $metDiff --cpg $minCpG --sd $sdDiff --dist $distMethod --linkage $linkMethod $hierarchical $kmeans $pam";
